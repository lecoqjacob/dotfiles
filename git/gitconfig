[core]
    editor = nvim
    pager = delta
    excludesfile = /Users/elkxj/.gitignore-global
    attributesfile = ~/.gitattributes

[alias]
    dft = difftool
    nuke = !git-nuke
    cr = "!f() { git fetch -p && for branch in $(git branch -vv | grep ': gone]' | awk '{print $1}'); do git branch -D $branch; done }; f"
    pnv = push --no-verify
    pnvf = push --no-verify --force

[color]
    ui = true
    diff = auto
    status = auto
    branch = auto
    showbranch = auto

[color "branch"]
	local = yellow
	remote = green
    current = yellow reverse

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[color "diff"]
	old = red bold
	new = green bold
	meta = yellow bold
	frag = magenta bold

[color "status"]
	added = green
	changed = yellow
	untracked = cyan

[delta]
    navigate = true  # use n and N to move between diff sections

[diff]
    tool = difftastic
    colorMoved = default

[difftool]
        prompt = false

[difftool "difftastic"]
        cmd = difft "$LOCAL" "$REMOTE"

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3

